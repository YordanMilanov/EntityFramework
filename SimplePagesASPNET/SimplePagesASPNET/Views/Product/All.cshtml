@using SimplePagesASPNET.ViewModels.Product;
@model IEnumerable<ProductViewModel>;

    @{
        ViewData["Title"] = "All Products";
    }
<div>
<form method="get" asp-controller="Product" asp-action="All">
    <input name="keyword"/>
    <button type="submit">Search</button>
    </form>
</div>
    <div class="card" style="width: 18rem">
        <div class="card-header">
            @ViewData["Title"]
        </div>

        <ul>
            @foreach(ProductViewModel product in Model) {
            <li class="list-group-item"><a asp-controller="Product" asp-action="ById" asp-route-id="@product.Id">@product.Name - @product.Price$</a></li>
            }
        </ul>
    </div>

    <div class="row">
        <a class="btn btn-primary" width="10rem" asp-controller="Product" asp-action="DownloadProductsInfo">Download Products Info</a>
    </div>
